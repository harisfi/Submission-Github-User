<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_row"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:elevation="3dp"
            android:id="@+id/cvTrim"
            app:cardCornerRadius="19dp"
            android:innerRadius="0dp"
            android:shape="ring">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/imageV"
                android:src="@mipmap/ic_launcher_round"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleV"
            android:text="@string/name"
            android:textSize="16sp"
            android:textColor="#0366D6"
            android:layout_toEndOf="@id/cvTrim"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleV1"
            android:text="@string/username"
            android:textSize="16sp"
            android:textColor="#24292E"
            android:textStyle="bold"
            android:layout_toEndOf="@id/titleV"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc"
            android:text="@string/location"
            android:textSize="14sp"
            android:textColor="#AB666666"
            android:layout_below="@id/titleV"
            android:layout_toEndOf="@id/cvTrim"
            android:layout_marginStart="10dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>